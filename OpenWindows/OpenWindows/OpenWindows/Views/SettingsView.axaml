        <!--                             <ButtonSpinner Spin="Spinner_OnSpin"> -->
        <!--                                 <TextBlock Text="{Binding ., Mode=TwoWay, Converter={StaticResource FloatToStringConverter}}" /> -->
        <!--                             </ButtonSpinner> -->
        <!--                         </DataTemplate> -->
        <!--                     </ContentControl.DataTemplates> -->
        <!--                 </ContentControl> -->
        <!--             </Grid> -->
        <!--         </DataTemplate> -->
